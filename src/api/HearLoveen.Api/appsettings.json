{
  "ConnectionStrings": {
    "Postgres": "Host=${POSTGRES_HOST:postgres};Database=${POSTGRES_DB:hear};Username=${POSTGRES_USER:hear};Password=${POSTGRES_PASSWORD:changeme}",
    "ServiceBus": "${SERVICEBUS_CONNECTION:}",
    "Redis": "${REDIS_CONNECTION:redis:6379}"
  },
  "Blob": {
    "AccountUrl": "${BLOB_ACCOUNT_URL:}",
    "Container": "${BLOB_CONTAINER:audio}"
  },
  "ServiceBus": {
    "Queue": "${SERVICEBUS_QUEUE:audio-submitted}"
  },
  "Serilog": {
    "MinimumLevel": "${LOG_LEVEL:Information}",
    "WriteTo": [
      {
        "Name": "Console"
      }
    ]
  },
  "AzureAdB2C": {
    "Instance": "${AZURE_AD_B2C_INSTANCE:}",
    "Domain": "${AZURE_AD_B2C_DOMAIN:}",
    "ClientId": "${AZURE_AD_B2C_CLIENT_ID:}",
    "TenantId": "${AZURE_AD_B2C_TENANT_ID:}",
    "SignUpSignInPolicyId": "${AZURE_AD_B2C_SIGNIN_POLICY:B2C_1_signin}",
    "EditProfilePolicyId": "${AZURE_AD_B2C_EDIT_POLICY:B2C_1_edit}",
    "ResetPasswordPolicyId": "${AZURE_AD_B2C_RESET_POLICY:B2C_1_reset}"
  },
  "Features": {
    "UseLexiconWeighting": true,
    "UseEloScheduler": true
  }
}