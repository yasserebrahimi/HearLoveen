{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "AzureAdB2C": {
    "Instance": "https://hearloveen.b2clogin.com/",
    "Domain": "hearloveen.onmicrosoft.com",
    "TenantId": "YOUR_TENANT_ID",
    "ClientId": "YOUR_CLIENT_ID",
    "SignUpSignInPolicyId": "B2C_1_signupsignin"
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:5173",
      "https://dashboard.hearloveen.com"
    ]
  },
  "ReverseProxy": {
    "Routes": {
      "audio-route": {
        "ClusterId": "audio-cluster",
        "Match": {
          "Path": "/api/v1/audio/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/v1/audio/{**catch-all}"
          }
        ]
      },
      "analysis-route": {
        "ClusterId": "analysis-cluster",
        "Match": {
          "Path": "/api/v1/analysis/{**catch-all}"
        }
      },
      "user-route": {
        "ClusterId": "user-cluster",
        "Match": {
          "Path": "/api/v1/users/{**catch-all}"
        }
      },
      "notification-route": {
        "ClusterId": "notification-cluster",
        "Match": {
          "Path": "/api/v1/notifications/{**catch-all}"
        }
      },
      "iot-route": {
        "ClusterId": "iot-cluster",
        "Match": {
          "Path": "/api/v1/iot/{**catch-all}"
        }
      },
      "ml-route": {
        "ClusterId": "ml-cluster",
        "Match": {
          "Path": "/api/ml/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "audio-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://audioservice:5001"
          }
        },
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:10",
            "Timeout": "00:00:05",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          }
        }
      },
      "analysis-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://analysisservice:5002"
          }
        },
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:10",
            "Timeout": "00:00:05",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          }
        }
      },
      "user-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://userservice:5004"
          }
        },
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:10",
            "Timeout": "00:00:05",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          }
        }
      },
      "notification-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://notificationservice:5003"
          }
        },
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:10",
            "Timeout": "00:00:05",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          }
        }
      },
      "iot-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://iotservice:5005"
          }
        },
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:10",
            "Timeout": "00:00:05",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          }
        }
      },
      "ml-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://mlapi:8000"
          }
        },
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:10",
            "Timeout": "00:00:05",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          }
        }
      }
    }
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Yarp": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName"]
  }
}
