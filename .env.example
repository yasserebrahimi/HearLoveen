# HearLoveen Environment Configuration
# Copy this file to .env and fill in your actual values

# ========================================
# Database Configuration
# ========================================
POSTGRES_HOST=localhost
POSTGRES_DB=hear
POSTGRES_USER=postgres
POSTGRES_PASSWORD=changeme

# ========================================
# Azure Services
# ========================================
# Azure Service Bus
SERVICEBUS_CONNECTION=Endpoint=sb://YOUR_NAMESPACE.servicebus.windows.net/;SharedAccessKeyName=RootManageSharedAccessKey;SharedAccessKey=YOUR_KEY
SERVICEBUS_QUEUE=audio-submitted

# Azure Blob Storage
BLOB_ACCOUNT_URL=https://YOUR_ACCOUNT.blob.core.windows.net
BLOB_CONTAINER=audio

# Azure AD B2C Authentication
AZURE_AD_B2C_INSTANCE=https://YOUR_TENANT.b2clogin.com/
AZURE_AD_B2C_DOMAIN=YOUR_TENANT.onmicrosoft.com
AZURE_AD_B2C_CLIENT_ID=your-client-id
AZURE_AD_B2C_TENANT_ID=your-tenant-id
AZURE_AD_B2C_SIGNIN_POLICY=B2C_1_signin
AZURE_AD_B2C_EDIT_POLICY=B2C_1_edit
AZURE_AD_B2C_RESET_POLICY=B2C_1_reset

# ========================================
# Redis Configuration
# ========================================
REDIS_CONNECTION=localhost:6379

# ========================================
# Logging Configuration
# ========================================
LOG_LEVEL=Information

# ========================================
# AI Worker Configuration
# ========================================
# Service Bus connection for worker
SB_CONNECTION=${SERVICEBUS_CONNECTION}
SB_QUEUE=${SERVICEBUS_QUEUE}

# PostgreSQL connection for worker
PG_CONN=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:5432/${POSTGRES_DB}

# ONNX Model Paths
ONNX_ASR_PATH=/models/asr.onnx
ONNX_SER_PATH=/models/ser.onnx

# Phoneme configuration
PHONEMES=/config/phonemes.json
TARGET_LEXICON=/config/lexicon.json

# G2P Backend (g2p_en, phonetisaurus, sequitur)
G2P_BACKEND=g2p_en
G2P_MODEL=/models/g2p.fst
G2P_LANG=auto

# ========================================
# ML API Configuration
# ========================================
# CORS Configuration (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# ========================================
# Docker Compose Overrides
# ========================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=changeme
GRAFANA_ADMIN_PASSWORD=changeme

# ========================================
# Feature Flags
# ========================================
# These can be set in appsettings.json as well
# FEATURE_USE_LEXICON_WEIGHTING=true
# FEATURE_USE_ELO_SCHEDULER=true
